<?xml version="1.0"?>
<object>

  <!-- Hidden vielets in plone.portalheader -->
  <hidden manager="plone.portalheader" skinname="*" purge="True">
    <viewlet name="plone.searchbox"/>
    <viewlet name="plone.personal_bar"/>
  </hidden>

  <!-- Order vielets in plone.portalheader -->
  <order manager="plone.portalheader" skinname="*" purge="True">
    <viewlet name="plone.logo"/>
    <viewlet name="senaite.setupbutton"/>
    <viewlet name="senaite.sections_dropdown"/>
    <viewlet name="plone.app.i18n.locales.languageselector"/>
  </order>

  <!-- Hidden vielets in plone.toobar -->
  <hidden manager="plone.toolbar" skinname="*" purge="True">
    <viewlet name="plone.contentviews"/>
  </hidden>

  <!-- Hidden vielets in plone.mainnavigation -->
  <hidden manager="plone.mainnavigation" skinname="*" purge="True">
    <viewlet name="plone.global_sections"/>
  </hidden>

  <!-- Hidden vielets in plone.portalfooter -->
  <hidden manager="plone.portalfooter" skinname="*" purge="True">
  </hidden>

</object>
